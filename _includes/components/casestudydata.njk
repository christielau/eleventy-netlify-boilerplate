<div class="casestudydata">
	<h3>{{ title }}</h3>
	      <p>
	      	<small>
          <time datetime="{{ date | machineDate }}">{{ date | readableDate }}</time>
          {% if client %}
          <br>
          Client: {{ client }}
          {% endif %}
          {% if timeframe %}
          <br>
          Timeframe: {{ timeframe }}
          {% endif %}
	</small>
    </p>

	      {% if tags %}
        <p>
          {% for tag in tags %}
            {%- if tag != "post" -%}
              {% set tagUrl %}/tags/{{ tag }}/{% endset %}
                <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
              {%- endif -%}
          {% endfor %}
        </p>
      {% endif %}
</div>
