<h3>Recent projects <i class="twa twa-information-desk-person"></i></h3>


<section class="postslist-home">
	{% for post in postslist | reverse %}
		{%- if tag == "Enterprise Product" -%}
		<article{% if post.url == url %} data-current="current item"{% endif %}>
		{% if post.data.image %}
			<a href="{{ post.url | url }}">
			<img src="{{ post.data.image }}" alt="{{ post.data.title }}" />
			</a>
			{% endif %}
			<h3>
				<a href="{{ post.url | url }}">
					{% if post.data.title %}
						{{ post.data.title }}
					{% else %}
						Untitled
					{% endif %}
				</a>
			</h3>
			{% if post.data.summary %}
				<p>
					{{ post.data.summary }}
				</p>
			{% endif %}
		</article>
		{%- endif -%}
	{% endfor %}
</section>
